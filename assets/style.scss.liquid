  margin-bottom: 60px;
  grid-template-columns: repeat(2, 1fr);
  grid-gap: 30px;
}

.charts{
  @include at-query($min, $large) {
    padding: 76px 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    .chart-header{
      max-width: 225px;
      width: 100%;
      margin-right: 5%;
    }
  }
  @media screen and (max-width: $medium) {
    text-align: center;
  }
  .chart-header{
    @media screen and (max-width: $medium) {
      padding-bottom: 20px;
    }
    h2{
      color: $colorPrimary;
      font-size: 2.5em;
      line-height: 1.2em;
    }
    div{
      font-size: 16px;
      line-height: 25px;
      font-weight: 600;
    }
  }
}

.chart-table {
  @media screen and (max-width: $small) {
    margin: 10px 0 30px;
    .spice__row{
      border-bottom: none !important;
      display: grid !important;
      grid-template-columns: 33% 33% 33%;
      grid-template-rows: auto;
    }
    .spice_cell{
      text-align: center;
      flex-direction: column;
      min-width: auto !important;
      img{
        width: 100%;
        max-width: 100%;
        display: block;
        margin: 0 auto;
        padding-bottom: 13px;
      }
    }

    .spice_name{
      grid-column: span 3;
      justify-content: center;
      padding: 20px 0;
    }

    .spice__row:first-child {
      padding-bottom: 5% !important;
    }
    .spice__row:last-child {
      padding-top: 5% !important;
    }


  }
  @media screen and (max-width: $medium){
    overflow-x: scroll;
  }
  p{
    margin-bottom: 0;
  }
  .spice_cell{
    border: none;
    font-weight: 600;
    vertical-align: middle;
    padding: 0 3%;
    min-width: 205px;
    display: flex;
    align-items: center;
    img{
      width: 67px;
      height: 67px;
      object-fit: contain;
      @include at-query($min, $medium) {
        margin-right: 16px;
      }
    }
  }

  .spice__row{
    border-bottom: 1px solid $colorPrimary;
    position: relative;
    display: flex;
  }
  .spice__row:first-child {
    padding-bottom: 30px;
  }
  .spice__row:last-child {
    border-bottom: none;
    padding-top: 30px;
  }

  .spice_name{
    font-weight: bold;
    color: $colorPrimary;
    font-size: 18px;
    padding-right: 1%;
    padding-left: 0;
    display: flex;
    align-items: center;
    img{
      max-width: 35px;
      margin-right: 12px;
    }
  }

}

.harvest{
  display: flex;
  @media screen and (max-width: $medium) {
    align-items: center;
  }
  @include at-query($min, $large) {
    justify-content: flex-end;
  }
}

.harvest-items{
  position: relative;
  margin: 0;
  @include at-query($min, $large) {
    max-width: min-content;
    min-width: 34%;
    width: inherit;
  }
  li{
    list-style: none;
    margin-bottom: 18px;
  }
  li:last-of-type{
    margin-bottom: 0;
  }
  .custom-field--value{
    font-size: 2em;
    font-weight: bold;
    line-height: 1.2em;
    color: $colorPrimary;
  }
  .sub-text{
    font-size: 1.2em;
    line-height: 1.3em;
  }
  img{
    width: 117px;
    padding: 2px 0;
  }
  @media screen and (max-width: $medium) {
    .custom-field--value{
      font-size: 1.6em;
    }
    .sub-text{
      font-size: 1.1em;
    }
  }
}

.harvest-image{
  float: right;
  max-width: 332px;
  @media screen and (max-width: $small){
    max-width: 60%;
    padding-left: 20px;
  }
}

.equity-pledge{
  position: relative;
  background: #FFE200;
  width: calc(100% + 8vw);
  margin-left: -4vw;
  padding: 40px 0;
  margin-top: 40px;
  @media screen and (max-width: $small) {
    width: 100%;
    margin-left: 0;
    .chart-header{
      padding: 0 22px;
    }
    &:before{
      background-position: top center;
      background-size: contain !important;
      top: -22px !important;
    }
    img{
