  font-weight: bold;
  text-align: center;
  padding: 31px;
  width: calc(100% + 8vw);
  margin-left: -4vw;
  @media screen and (max-width: $small) {
    width: 100%;
    margin-left: 0;
  }
  a.btn{
    background: $lemon;
    color: $colorPrimary;
    margin-top: 14px;
    &:hover {
      background: $gold;
      border-color: $gold;
    }
  }
}

.product-single {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  border-bottom: 1px solid $colorBorder;
  position: relative;
  z-index: 100;
}


.product-panel-background {
  position: relative;
  width: 100%;
  height: 100%;

  &:before, &:after{
    content: '';
    position: absolute;
    background-repeat: no-repeat;
    background-size: contain;
    width: 100%;
    top: 0;
    height: 100%;
  }

  .product-single {
    border-bottom: 1px solid $orange-gold
  }
}

@keyframes leftRotateIn {
  from { transform: rotate(-8deg) translatex(-59%); }
  to { transform: rotate(0deg) translatex(0);  }
}

@keyframes rightRotateIn {
  from { transform: rotate(8deg) translatex(48%); }
  to { transform: rotate(0deg) translatex(0);  }
}

.product-panel-background {
  &:before{
    background-position: left 0% top 0;
    animation: leftRotateIn 3s backwards ease;
  }
  &:after{
    background-position: right 0  bottom 0;
    animation: rightRotateIn 3s backwards ease;

    @media screen and (max-width: $small){
      background-position: right 0 top 0;
    }
  }
  &:before, &:after {
    transform-origin: 0;
    background-size: auto 100%;
    animation-delay: 1s;

    @media screen and (max-width: $small) {
      height: 50%;
    }
  }
}


@keyframes chiliAfter {
  from { transform: translatex(-57%); }
  to { transform: translatex(0);  }
}

@keyframes chiliBefore {
  from { transform: translatex(57%) scaleX(-1); }
  to { transform: translatex(0) scaleX(-1);  }
}

