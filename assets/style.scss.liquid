  font-weight: $font-weight;
  @include tracking(10);
  -webkit-font-smoothing: antialiased;
  -webkit-text-size-adjust: 100%;
  -moz-osx-font-smoothing: grayscale
}

body, html, button, input {
  font-size: $font-size - 2;
  @include at-query($min, $large) {
    font-size: $font-size;
  }
}

h1, h2, h3, h4, h5, h6 {
  display: block;
  font-family: $sans-serif, $font-stack-header;
  font-weight: $font-weight-header;
  color: $colorTextHeader;
  margin: 0 0 0.5rem;
  line-height: 1.4;

  a {
    text-decoration: none;
    font-weight: inherit;
  }
}

.shop-name {
  font-family: $font-stack-logo;
}

svg { fill: currentColor; }

/*================ Use em() Sass function to declare font-size ================*/

p {
  //font size inheirited from html/body.
  margin: 0 0 1rem;
  img {margin: 0;}
}

h1 {
  font-size: 3em;
  line-height: 1em;
  @include tracking(10);
  color: $colorPrimary;
}

h2 {
  font-size: em(40px);
  line-height: 1em;
  @include tracking(10);
  color: $colorPrimary;
}

h3 {
  font-family: $serif, $font-stack-header;
  font-weight: normal;
  font-size: em(30px);
  line-height: em(34px);
  @include tracking(-10);
  color: $colorPrimary;
}

h4 {
  font-size: em(20px);
  @include tracking(10);
  color: $colorPrimary;
}

h5 {
  font-size: em(20px);
  line-height: em(24px);
  @include tracking(150);
  color: $colorPrimary;
  text-transform: uppercase;
}

h6 {
  font-size: em(16px);
  line-height: em(19px);
  @include tracking(150);
  color: $colorPrimary;
  text-transform: uppercase;
}

.h1 { @extend h1; }
.h2 { @extend h2; }
.h3 { @extend h3; }
.h4 { @extend h4; }
.h5 { @extend h5; }
.h6 { @extend h6; }

em {
  font-style: $font-style-italic;
}

b, strong {
  font-weight: $font-weight-bold;
}

small {
  font-size: 0.9em;
}

sup, sub {
  position: relative;
  font-size: 60%;
  vertical-align: baseline;
}
sup {
  top: -0.5em;
}

sub {
  bottom: -0.5em;
}

/*================ Blockquotes ================*/
blockquote {
  font-size: 1.125em;
  line-height: 1.45;
  font-style: $font-style-italic;
  margin: 0 0 $gutter;
  padding: ($gutter / 2) $gutter;
  border-left: 1px solid $colorBorder;

  p {
    margin-bottom: 0;

    & + cite {
      margin-top: $gutter / 2;
    }
  }

  cite {
    display: block;
    font-size: 0.75em;

    &:before {
      content: '\2014 \0020';
    }
  }
}

/*================ Code ================*/
code, pre {
  background-color: #faf7f5;
  font-family: Consolas,monospace;
  font-size: 1em;
  border: 0 none;
  padding: 0 2px;
  color: #51ab62;
}

pre {
  overflow: auto;
  padding: $gutter / 2;
  margin: 0 0 $gutter;
}

/*================ Horizontal Rules ================*/
hr {
  clear: both;
  border-top: solid $colorPrimary;
  border-width: 1px 0 0;
  margin: $gutter 0;
  height: 0;

  &.hr--small {
    margin: 1em 0 0 0;
  }

  &.hr--center {
    margin-left: auto !important;
    margin-right: auto !important;
    width: 100%;
    margin: em(50px) 0;
  }

  &.hr--clear {
    border-top-color: transparent;
  }

  &.hr--default-bottom {margin-bottom: $gutter;}

  &.hr--small-only {
    @include at-query($min, $postSmall){
      display: none;
    }
  }
}

/*================ Section Headers ================*/

.featured-title {
  padding: 40px 30px;
  text-align: center;
  text-transform: capitalize;
  margin-bottom: 0px;
  max-width: 500px;
  margin-right: auto;
  margin-left: auto;
}

.section-header {
  display: table;
  width: 100%;

  h1 + .meta-info {
    margin-top: -0.5rem;
    margin-bottom: 1.5rem;
  }

  p:last-child {
    margin-bottom: 0;
  }

  .section-header:before {
    position: absolute;
    z-index: 1;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;

    .with-overlay & {
      content: '';
    }
  }



  //Make sure the spacing is equidistant
  //This handles the case of last and first child
  //being the same element (i.e. the only one)
  > div{
    > *:first-child{
      margin-top: 0.625rem;
    }

    > *:last-child{
      margin-bottom: 3rem;
    }
  }

}

@include at-query ($min, $postSmall) {

  .section-header__title {
    margin-bottom: 0;
  }

  .section-header__title + p{
    margin-top: .5rem;
  }

  .section-header__left {
    //this gives us proper centering when it's wrapped in a centred table
    //e.g. on the collections list page
    display: inline-block;
    vertical-align: text-bottom;
    margin-bottom: 0;

    h1, h2, h3, h4,
    .h1, .h2, .h3, .h4 {
      margin-bottom: 0;
    }

    p:last-of-type {
      margin-bottom: 1.5rem;
    }

    & + a {
      float: right;
      //This offsets the a tag so that the baseline is the same with the
      //.h1 before it.  h1 = 36px (2.25 rem) / 2
      position: relative;
      top: 1.25em;
    }
  }

  .section-header__right {
    display: table-cell;
    vertical-align: middle;
    text-align: right;
    width: 335px;

    @media screen and (max-width: $medium) {
      margin-bottom: $gutter;
    }
  }
}

.section-header__right {
  .form-horizontal,
  .collection-view {
    display: inline-block;
    vertical-align: middle;
  }

  @include at-query ($min, $postSmall) {
    label + select,
    .collection-view {
      margin-left: $gutter / 2;
    }
  }
}

.section-header--image {
  position: relative;
  margin-bottom: 0;
  display: table;
  width: 100%;
  height: 340px;

  @media screen and (max-width: $medium) {
    height: 280px;
  }

  .text-wrapper--center-cell {
    text-align: center;
  }

  .text-wrapper {
    position: relative;
    z-index: 2;
    display: inline-block;
    vertical-align: middle;

    //Need to make top/bottom padding explicit for FF
    //Safari and Chrome are fine without it though
    .template-collection & {padding: 2.5em}

    p:last-of-type {margin-bottom: 0;}
  }

  //The white overlay
  &:after {
    content: " ";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 1;
  }

  .respond-to-transparent-header & {
    @include at-query($min, $medium) {
      padding-top: 90px;
      box-sizing: content-box;
    }
  }

}

.section-header--no-image-loaded {
  & > div {max-width: 1200px;}
  margin: 0 auto;

  //Need to make top/bottom padding explicit for FF
  //Safari and Chrome are fine without it though
  .template-collection & .text-wrapper {padding: 2.5em}
}

.collection-view {
  display: inline-block;
  border: 1px solid $colorBorder;
  border-radius: $radius;
  padding: 0 5px;
  height: 37px; // same as form elements
  overflow: hidden;

  /*================ Only show on larger screens ================*/
  @include at-query ($min, $large) {
    display: inline-block;
  }
}

.change-view {
  display: block;
  background: none;
  border: 0 none;
  float: left;
  padding: 10px 8px;
  color: $colorBorder;
  line-height: 1;

  &:hover,
  &:focus {
    color: $colorPrimary;
  }
}

.change-view--active {
  cursor: default;
  color: $colorPrimary;
}

/*================ Helper Typographic Fonts ================*/

.light {
  font-weight: $font-weight-light;
}

.bold {
  font-weight: $font-weight-bold;
}

.drop-shadow {

  @include at-query($min, $postSmall) {
    text-shadow: 0px 2px 4px rgba(0, 0, 0, 0.2);
  }
}

button.drop-shadow {

  @include at-query($min, $postSmall) {
    text-shadow: none;
    box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.2);
  }
}

.accent {
  color: $colorPrimary !important;
}

/*================ Text wrapper ================*/

.text-max-width {
  max-width: 36em;
  margin-left: auto;
  margin-right: auto;
}

$textWrapperPadding: 8vw 3em;
$textWrapperPaddingLarge: 2.5em 1em;
.text-wrapper {
  padding: $textWrapperPadding ;

  @include at-query($min, $postSmall){
    padding: $textWrapperPaddingLarge;
  }

  > div > *:last-child { margin-bottom: 0; }
}

//This is used for elements we want to centre
//Note: the parent must have display: table set
//(e.g. using class .table--full-height)
.text-wrapper--center-cell {
  @extend .text-wrapper;
  display: table-cell !important;
  vertical-align: middle;
  width: 100%;

  @include at-query($min, $postSmall){
    padding: 0 $textWrapperPaddingLarge;
  }
}

.center-cell {
  display: table-cell !important;
  vertical-align: middle;
  width: 100%;
}

.text-wrapper--small {
  max-width: em(575px);
  margin: 0 auto;
}

/*============================================================================
#Rich Text Editor
==============================================================================*/
.rte {
  margin-bottom: $gutter / 2;

  img { max-width: 100%; }

  a {
    text-decoration: none;
    font-weight: $font-weight-bold;
  }

  // Add some top margin to headers from the rich text editor
  h1, h2, h3, h4, h5, h6 {
    margin-top: 1.5em;

    &:first-child {
      margin-top: 0;
    }

    a {
      text-decoration: none;
    }
  }

  > div {
    margin-bottom: $gutter / 2;
  }

  li {
    margin-bottom: 0.4em;
  }
}

.rte--header {
  margin-bottom: 0;
}

/*============================================================================
#Links and Buttons
==============================================================================*/
a,
.text-link {
  color: $colorLink;
  text-decoration: none;
  background: transparent;
}

a:hover,
a:focus,
.text-link:hover {
  color: $colorLinkHover;

  &:after{
    width: 100%;
  }
}

button {
  overflow: visible;
}

button[disabled],
html input[disabled] {
  &, a {
    cursor: default;
  }
}

@mixin button {
  @include prefix("user-select", "none");
  @include prefix("appearance", "none");
  @include transition(background-color 100ms ease);
  display: inline-block;
  padding: em(13px) em(21px);
  width: auto;
  margin: 0;
  border-radius: $radius;
  line-height: 1.42;
  font-weight: $font-weight-bold;
  text-decoration: none;
  text-align: center;
  vertical-align: middle;
  white-space: nowrap;
  cursor: pointer;
  border-style: solid;
  border-width: 2px;
  border-color: $colorPrimary;

  &:hover {
    background-color: $colorBtnPrimaryHover;
    color: $colorBtnPrimaryText;
    border-color: $colorBtnPrimaryHover;
  }

  &[disabled], &.disabled {
    cursor: default;
    color: $colorPrimary;
    background-color: $gold;
    // color: $disabledBorder;
    // background-color: $disabledGrey;
    // border-color: $disabledGrey;
  }
}

@mixin button-primary {
  @include button;
  background-color: $colorPrimary;
  color: $colorBtnPrimaryText;
  transition: all 0.2s ease;

  &:active, &:focus {
    background-color: $colorBtnPrimaryActive;
    color: $colorBtnPrimaryText;
  }
}

@mixin button-secondary {
  @include button;
  background-color: transparent;
  color: $colorPrimary;
}

@mixin button-outline {
  @include button-secondary;
  border: 1px solid $colorPrimary;

  &:active, &:focus, &:hover {
    background-color: $colorPrimary;
    color: #fff;
  }
}

.btn, .rte .btn {
  @include button-primary;
}

.btn-secondary {
  @include button-secondary;
}

.btn-outline {
  @include button-outline;
}

.btn--small {
  padding: 10px 15px;
  font-size: em(14px);
}

.btn--large {
  padding: 13px 33px 13px 33px;
  font-size: em(18px);
}

.btn--full {
  width: 100%;
}

.btn--orange {
  background: $orange;
  color: white;
  border-radius: 10px;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  &:hover, &:focus, &:active {
    background: $colorPrimary;
    border: none;
  }
}

@media screen and (max-width: $small){
  .small--btn--full {
    width: 100%;

    & + & {margin-top: 1em;}
  }
}


/*================ Force an input/button to look like a text link ================*/
.text-link {
  display: inline;
  border: 0 none;
  background: none;
  padding: 0;
  margin: 0;
}


/*================ Dynamic payment button ================*/

.shopify-payment-button {
