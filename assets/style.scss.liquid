//*** PRODUCT PAGES PREORDER/SECONDARY FLOATING LINK ***//

@keyframes boingHello {
  0% {
    bottom: -230px;
  }
  50% {
    bottom: -18px;
  }
  100% {
    bottom: -20px;
  }
}

@keyframes boingHelloDesktop {
  0% {
    top: 0px;
    opacity: 0%;
  }
  25% {
    opacity: 10%;
  }
  50% {
    top: -170px;
    opacity: 50%
  }
  100% {
    top: -155px;
    opacity: 100%;
  }
}


@keyframes boingGoodbye {
  0% {
    bottom: -20px;
  }
  100% {
    bottom: -230px;
  }
}

@keyframes boingGoodbyeDesktop {
  0% {
    top: -190px;
  }
  100% {
    top: 0px;
  }
}

@keyframes coverFadeaway {
  0% {
    height: 150px;
  }
  100% {
    height: 0;
  }
}

@keyframes swirlHello {
  0% {
    opacity: 0;
    transform: rotate(-180deg);
  }
  33% {
    opacity: 0;
  }
  100% {
    opacity: 1;
    transform: rotate(0deg);
  }
}

@keyframes floatNfade {
  0% {
    opacity: 0;
    transform: translateY(6px);
  }
  100% {
    opacity: 1;
    transform: translateY(0px);
  }
}

@keyframes rotateHello {
  0% {
    transform: rotate(-5deg) translate(30px, -10px);
  }
  70% {
    transform: transform(-50deg) translate(20px, -30px);
  }
  100% {
    transform: rotate(-45deg) translate(20px, -30px);
  }
}

.product__secondary-button-container {
  position: absolute;
  right: 40px;
  z-index: -1;

  @media screen and (min-width: 1025px) {
    top: -190px;
  }

  &:hover {
    .product__secondary-button {
      background: $colorPrimary;
      &:before {
        bottom: 30px;
        left: -30px;
      }
    }

    .product__secondary-button--pretitle, .product__secondary-button--title, .product__secondary-button--subtitle  {
      bottom: 3px;
    }
  }

  &.reverse-animate {
    animation: boingGoodbye ease 1s;

    @media screen and (min-width: 1025px) {
      animation: boingGoodbyeDesktop ease 1s;
    }
  }
  &.animate {
    animation: boingHello cubic-bezier(0.25, 0.1, 0.28, 1.02) 1.5s;
    animation-iteration-count: 1;
    animation-fill-mode: forwards;

    @media screen and (min-width: 1025px) {
      animation: boingHelloDesktop cubic-bezier(0.25, 0.1, 0.28, 1.02) 1.5s;
      animation-iteration-count: 1;
      animation-fill-mode: forwards;
    }
  }


  @media screen and (max-width: 1024px) {
    transform: scale(0.75) translate(-60px, 30px);
    position: fixed !important;
    left: 10px;
    right: unset;
    z-index: 200;
    bottom: -230px;
  }

  &:before {
    position: absolute;
    //  content: '';
    width: 100%;
    height: 150px;
    background: $gold;
    bottom: -160px;
    z-index: 1;
    animation: coverFadeaway linear 0.5s;
    animation-iteration-count: 1;
    animation-fill-mode: forwards;
    animation-delay: 0.5s;
  }
}

.animate.product__secondary-button-container {
  g {
    animation: swirlHello cubic-bezier(0.25, 0.1, 0.28, 1.02) 2s;
    animation-iteration-count: 1;
    animation-fill-mode: forwards;
    animation-delay: 0.5s;
  }
