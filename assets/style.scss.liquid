    position: absolute;
    right: 1em;
    top: 1em;
  }
}

.exit-intent__content {
  padding: 2.5em;
}

.exit-intent-overlay {
  position: fixed;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  background-color: rgba(0,0,0,0.8);
  opacity: 0;
  @include prefix('perspective', '1000px');


  z-index: -1;
  &.show {
    opacity: 1;
    z-index: 100000; //one higher than .helper-note
  }
}


//The exit intent image only appears for larger screensizes
@include at-query($min, $medium + 1){
  .exit-intent--large {
    max-width: em(800px);
    width: 100%;

    .exit-intent__content {
      width: 50%;
    }
  }
}

.exit-intent__image {
  background-repeat: no-repeat;
  background-position: center center;
  background-size: cover;
  -ms-behavior: url({{ 'backgroundsize.min.htc' | asset_url }}); //polyfill IE8
  width: 100%;

  height: em(600px);
  max-height: 75vh;
  min-height: em(250px); //handles a very short viewport

  display: none;

  @include at-query($min, $medium + 1){
    display: block;
  }
}

//FF bugs

//Firefox doesn't play nicely with some of the backface and perspective stuff
//Confirmed in 41.0.1.  Mozilla will likely fix soon and then we can remove this
//but leave it in until they do.
@-moz-document url-prefix() {
  .exit-intent  {
    //Remove rotate() as we don't get the effect we want with perspective
    @include transform('translateX(-50%) translateY(-50%)');
  }


  //Firefox has some jumpiness on OSX for scale of overlaid images,
  //there are issues in bugzilla
  //All the classes that have kenburns enabled.  Unfortunately we can't append
  //this to the mixin because that's now how te *-document selector works.
  .featured-blog__image:hover, .ken-burns, .cell-wrapper--has-alternate-image:hover img, .collection-block__image-wrapper:hover .collectionBlock__image {
    @include prefix('transform', 'initial');
  }
}

/*============================================================================
#Animation Layer
==============================================================================*/

$animation-sequence-curve: cubic-bezier(.19,1,.22,1);

%slide-up-animation-start {
  opacity: 0;
  transition: opacity 0.2s linear, transform 0s linear 1s;
  @include prefix('transform', 'translateY(20px)');
}

%slide-up-animation-end {
  opacity: 1;
  transition: opacity 0.6s $animation-sequence-curve, transform 1.5s $animation-sequence-curve;
  @include prefix('transform', 'translateY(0)');
}

// Carousel
.shopify-section.carousel .carousel-slide-text h1,
.shopify-section.carousel .carousel-slide-text p,
.shopify-section.carousel .carousel-slide-text .button-container {
  @extend %slide-up-animation-start;
}

.shopify-section.carousel .visible .carousel-slide-text {

  h1, p, .button-container {
    @extend %slide-up-animation-end;
  }

  h1 { transition-delay: 0.4s; }
  p { transition-delay: 0.5s; }
  .button-container { transition-delay: 0.6s; }
}

// Featured Collections and Home Grid
body:not(.ios) .shopify-section.featured-collections figcaption.can-animate,
body:not(.ios) .shopify-section.index-grid-wrapper figcaption.can-animate {

  h3, .index-grid-item-text, .btn {
    @extend %slide-up-animation-start;
  }
}

body:not(.ios) .shopify-section.featured-collections.visible figcaption.can-animate,
body:not(.ios) .shopify-section.index-grid-wrapper .index-grid-item.visible figcaption.can-animate {
  opacity: 1;

  h3, .index-grid-item-text, .btn {
    @extend %slide-up-animation-end;
  }

  @for $i from 0 to 5 {
    $delay: $i * 200;
    &.animation-sequence-#{$i} {

      h3 { transition-delay: #{200 + $delay}ms; }
      .index-grid-item-text { transition-delay: #{300 + $delay}ms; }
      .btn { transition-delay: #{400 + $delay}ms; }
    }
  }
}

// Video
body:not(.ios) .shopify-section.video-player .feature-video-slide-text.can-animate {

  h1, p, a {
    @extend %slide-up-animation-start;
  }
}

body:not(.ios) .shopify-section.video-player.visible .feature-video-slide-text.can-animate {

  h1, p, a {
    @extend %slide-up-animation-end;
  }

  h1 { transition-delay: 400ms; }
  p { transition-delay: 500ms; }
  a { transition-delay: 600ms; }
}

// Testimonials
body:not(.ios) .shopify-section.testimonials {

  .index-testimonials-items.can-animate > article {
    opacity: 0;
    transition: opacity 1s linear;
  }

  @for $i from 0 to 3 {
    $delay: $i * 100;

    &.visible .index-testimonials-items.can-animate > article.animation-sequence-#{$i} {
      transition-delay: #{200 + $delay}ms;
    }
  }

  &.visible .index-testimonials-items.can-animate > article {
    opacity: 1;
  }
}

// Features
body:not(.ios) .shopify-section.features {

  .index-features-items.can-animate > article {
    opacity: 0;
    transition: opacity 1s linear;
  }

  @for $i from 0 to 3 {
    $delay: $i * 100;

    &.visible .index-features-items.can-animate > article.animation-sequence-#{$i} {
      transition-delay: #{200 + $delay}ms;
    }
  }

  &.visible .index-features-items.can-animate > article {
    opacity: 1;
  }
}

